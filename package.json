{
  "name": "editorial-emails",
  "version": "0.1.0",
  "description": "Node service for generating editorial emails",
  "main": "index.js",
  "repository": "git@github.com:guardian/editorial-emails.git",
  "author": "Nicolas Long <nicolas.long@theguardian.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "dev": "ts-node-dev --respawn --transpileOnly src/server.ts",
    "test": "jest",
    "tsc": "tsc --noEmit",
    "build": "tsc",
    "prebuild": "rm -rf target",
    "postbuild": "cp package.json target/ && cp yarn.lock target/ && cd target && yarn install --production && cd .. && ./bin/bundle.sh",
    "tslint": "tslint -c tslint.json 'src/**/*.ts'",
    "fix": "tslint -c tslint.json --fix 'src/**/*.ts'",
    "cdk": "cdk",
    "deploy": "cdk --profile frontend deploy"
  },
  "devDependencies": {
    "@types/aws-sdk": "^2.7.0",
    "@types/aws-serverless-express": "^3.3.1",
    "@types/compression": "^1.0.1",
    "@types/express": "^4.17.1",
    "@types/jest": "^24.0.19",
    "@types/node": "^12.11.5",
    "@types/react": "^16.9.9",
    "@types/react-dom": "^16.9.2",
    "@types/sanitize-html": "^1.20.2",
    "aws-cdk": "^1.15.0",
    "git-hooks": "^1.1.10",
    "jest": "^24.9.0",
    "ts-jest": "^24.1.0",
    "ts-node-dev": "^1.0.0-pre.43",
    "tslint": "^5.20.0",
    "typescript": "^3.6.4"
  },
  "dependencies": {
    "@guardian/image": "^1.0.2",
    "@aws-cdk/aws-apigateway": "^1.15.0",
    "@aws-cdk/aws-lambda": "^1.15.0",
    "@aws-cdk/core": "^1.15.0",
    "@guardian/src-foundations": "^0.2.3",
    "aws-sdk": "^2.554.0",
    "aws-serverless-express": "^3.3.6",
    "compression": "^1.7.4",
    "express": "^4.17.1",
    "express-async-handler": "^1.1.4",
    "minify-css-string": "^1.0.0",
    "react": "^16.11.0",
    "react-dom": "^16.11.0",
    "sanitize-html": "^1.20.1"
  }
}
